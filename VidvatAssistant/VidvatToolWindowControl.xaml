<UserControl x:Class="VidvatAssistant.VidvatToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="10">
        <TabControl>
            <TabItem Header="Chat">
                <Border Padding="10">
                    <TextBlock Text="Chat UI goes here"/>
                </Border>
            </TabItem>

            <TabItem Header="Code">
                <Border Padding="10">
                    <TextBlock Text="Code UI goes here"/>
                </Border>
            </TabItem>

            <TabItem Header="Explain">
                <Border Padding="10">
                    <TextBlock Text="Explanation UI goes here"/>
                </Border>
            </TabItem>

            <TabItem Header="Settings">
                <Border Padding="10">
                    <TextBlock Text="Settings UI goes here"/>
                </Border>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
